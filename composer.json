{
    "name": "your-company/laravel-graphql-dal",
    "description": "A Laravel package providing GraphQL Data Access Layer with database management, repository pattern, and GraphQL integration",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "graphql", "database", "dal", "repository", "lighthouse"],
    "authors": [
        {
            "name": "Your Company",
            "email": "dev@yourcompany.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "nuwave/lighthouse": "^6.62",
        "doctrine/dbal": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.3",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "YourCompany\\GraphQLDAL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YourCompany\\GraphQLDAL\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourCompany\\GraphQLDAL\\Providers\\GraphQLDALServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
