{
    "name": "bu/dal-package",
    "description": "Business Unit Data Access Layer Package - GraphQL + Database management for Laravel",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "graphql", "database", "dal", "repository", "lighthouse"],
    "authors": [
        {
            "name": "Business Unit",
            "email": "dev@businessunit.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "nuwave/lighthouse": "^6.62",
        "doctrine/dbal": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.3",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Bu\\DAL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bu\\DAL\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bu\\DAL\\Providers\\DALServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
