{
    "name": "bu/server",
    "description": "Business Unit Server Package",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bu\\Server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bu\\Server\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0 || ^11.0 || ^12.0",
        "nuwave/lighthouse": "^6.0",
        "tymon/jwt-auth": "^2.2"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bu\\Server\\Providers\\ServerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
