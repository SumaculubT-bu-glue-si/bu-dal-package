# Laravel GraphQL DAL Package Environment Configuration
# Copy this file to .env and update the values as needed

# Application
APP_NAME="Laravel GraphQL DAL Package"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=graphql_dal
DB_USERNAME=root
DB_PASSWORD=

# Alternative Database Connections
# PostgreSQL
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=graphql_dal
# DB_USERNAME=postgres
# DB_PASSWORD=

# SQLite (for testing)
# DB_CONNECTION=sqlite
# DB_DATABASE=:memory:

# DAL Specific Database Configuration (Optional)
# If you want the DAL to use a different database connection
GRAPHQL_DAL_DB_CONNECTION=mysql
DAL_DB_HOST=127.0.0.1
DAL_DB_PORT=3306
DAL_DB_DATABASE=graphql_dal
DAL_DB_USERNAME=root
DAL_DB_PASSWORD=

# Cache Configuration
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Redis Configuration (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# GraphQL Configuration
GRAPHQL_ENDPOINT=/graphql
GRAPHQL_PLAYGROUND_ENABLED=true
GRAPHQL_DEBUG=true

# Package Specific Configuration
GRAPHQL_DAL_SCHEMA_REGISTER=true
GRAPHQL_DAL_SCHEMA_PATH=vendor/yourcompany/laravel-graphql-dal/graphql/schema.graphql

# Testing Configuration
TESTING_DB_CONNECTION=sqlite
TESTING_DB_DATABASE=:memory:

# Development Tools
XDEBUG_MODE=develop,debug
XDEBUG_CONFIG="client_host=host.docker.internal"
